# Production Environment Variables Template
# Copy this to .env.production and fill in your actual values

# ============================================
# DATABASE
# ============================================
DATABASE_URL="postgresql://user:password@host:5432/database?schema=public"

# ============================================
# NEXTAUTH
# ============================================
NEXTAUTH_URL="https://your-vercel-url.vercel.app"
NEXTAUTH_SECRET="generate-with-openssl-rand-base64-32"

# ============================================
# STRIPE (PRODUCTION - Use LIVE keys!)
# ============================================
STRIPE_SECRET_KEY="sk_live_YOUR_SECRET_KEY"
STRIPE_PUBLISHABLE_KEY="pk_live_YOUR_PUBLISHABLE_KEY"
STRIPE_WEBHOOK_SECRET="whsec_YOUR_WEBHOOK_SECRET"

# Stripe Price IDs (Hybrid Model - Get from Stripe Dashboard)
STRIPE_BASIC_MONTHLY_PRICE_ID="price_YOUR_BASIC_PRICE_ID"
STRIPE_STARTER_MONTHLY_PRICE_ID="price_YOUR_STARTER_PRICE_ID"
STRIPE_PROFESSIONAL_MONTHLY_PRICE_ID="price_YOUR_PROFESSIONAL_PRICE_ID"
STRIPE_ENTERPRISE_MONTHLY_PRICE_ID="price_YOUR_ENTERPRISE_PRICE_ID"

# ============================================
# CLOUDINARY
# ============================================
CLOUDINARY_CLOUD_NAME="your-cloud-name"
CLOUDINARY_API_KEY="your-api-key"
CLOUDINARY_API_SECRET="your-api-secret"

# ============================================
# PUSHER (Real-time)
# ============================================
PUSHER_APP_ID="your-app-id"
PUSHER_KEY="your-key"
PUSHER_SECRET="your-secret"
PUSHER_CLUSTER="us2"
NEXT_PUBLIC_PUSHER_KEY="your-key"
NEXT_PUBLIC_PUSHER_CLUSTER="us2"

# ============================================
# TWILIO (Optional - SMS)
# ============================================
TWILIO_ACCOUNT_SID="your-account-sid"
TWILIO_AUTH_TOKEN="your-auth-token"
TWILIO_PHONE_NUMBER="+1234567890"

# ============================================
# EMAIL (Optional - SMTP)
# ============================================
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_USER="your-email@gmail.com"
SMTP_PASSWORD="your-app-password"
SMTP_FROM="noreply@trialtransport.com"

# ============================================
# APP SETTINGS
# ============================================
NEXT_PUBLIC_APP_URL="https://your-vercel-url.vercel.app"
NODE_ENV="production"

# ============================================
# NOTES
# ============================================
# 1. Replace all "your-*" placeholders with actual values
# 2. Use LIVE Stripe keys (sk_live_*, pk_live_*) for production
# 3. Generate NEXTAUTH_SECRET with: openssl rand -base64 32
# 4. Get Stripe Price IDs from Stripe Dashboard after creating products
# 5. Update NEXTAUTH_URL and NEXT_PUBLIC_APP_URL with your actual Vercel URL
# 6. Never commit this file to Git - keep it secure!